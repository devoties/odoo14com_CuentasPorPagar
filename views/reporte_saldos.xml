<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_reporte_saldos" model="ir.ui.view">
        <field name="name">Vista Reporte Saldos</field>
        <field name="model">reporte_saldos</field>
        <field name="arch" type='xml'>

            <form>
                <header>
                    <button name="testing_calculate_not_paid" string="Calcular Saldo Pendiente De Pago" type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <center>
                        <h1 style="color : black">
                            REPORTE SALDOS
                        </h1>
                    </center>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="fechai"/>
                            <field name="fechaf"/>


                        </group>


                    </group>
                    <group>
                        <notebook>

                            <page string="Lotes Facturados">
                                <group>
                                    <group>

                                        <field name="lotes_facturados" widget="many2many"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Lotes No Facturados">
                                <group>
                                    <group>

                                        <field name="lotes_no_facturados" widget="many2many"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </group>
                </sheet>
                <script>

                    console.log('Hi World')
                </script>
            </form>

        </field>
    </record>

</odoo>